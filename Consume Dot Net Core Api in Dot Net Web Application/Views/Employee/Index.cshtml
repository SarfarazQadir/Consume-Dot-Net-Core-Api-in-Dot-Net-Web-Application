@model IEnumerable<Consume_Dot_Net_Core_Api_in_Dot_Net_Web_Application.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@{
    if(TempData["insert_message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success</strong>@TempData["insert_message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.e_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.e_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.e_Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.e_City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.e_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.e_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.e_Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.e_City)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.e_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.e_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.e_Id })
            </td>
        </tr>
}
    </tbody>
</table>
